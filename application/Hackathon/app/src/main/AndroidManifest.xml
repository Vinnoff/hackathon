<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.industries.hackateam.hackathon">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SubjectsActivity" />
        <activity android:name=".LessonActivity" />
        <activity
            android:name=".DayLessonActivity"
            android:label="@string/title_activity_day_lesson"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QuestionActivity"
            android:label="@string/title_activity_question"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".NewQuestionPop"
            android:label="@string/title_activity_pop_new_question"
            android:theme="@style/AppTheme.TranslucidTheme"/>
        <activity
            android:name=".QuestionValidateTeacherActivity"
            android:label="@string/title_activity_question_validate_teacher"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QuestionValidateStudentActivity"
            android:label="@string/title_activity_question_validate_student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QuestionNoValidateStudentActivity"
            android:label="@string/title_activity_question_no_validate_student"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>